<%- include('../includes/header') %>

<main class="project-details">
    <section class="hero position-relative z-1 tw-pt-40 tw-pb-20">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="hero__title tw-mb-6 cursor-big splitTextStyleTwo">Project Details</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item"><a href="/projects">Projects</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Project Details</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section>

    <section class="project-content tw-py-20">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="project-gallery bg-white tw-p-8 tw-rounded-xl tw-mb-8">
                        <div class="main-image tw-mb-6">
                            <img src="/images/projects/project-1.jpg" alt="Project Main Image" class="img-fluid tw-rounded-lg">
                        </div>
                        <div class="thumbnail-gallery d-flex tw-gap-4">
                            <!-- Thumbnails will be loaded dynamically -->
                        </div>
                    </div>

                    <div class="project-description bg-white tw-p-8 tw-rounded-xl tw-mb-8">
                        <h2 class="tw-mb-6">Project Overview</h2>
                        <p class="tw-mb-4">Detailed project description will be loaded here...</p>
                    </div>

                    <div class="project-features bg-white tw-p-8 tw-rounded-xl">
                        <h3 class="tw-mb-6">Project Features</h3>
                        <ul class="tw-space-y-4">
                            <li class="d-flex align-items-center">
                                <i class="ph-bold ph-check-circle text-main-600 tw-mr-3"></i>
                                <span>Feature 1</span>
                            </li>
                            <li class="d-flex align-items-center">
                                <i class="ph-bold ph-check-circle text-main-600 tw-mr-3"></i>
                                <span>Feature 2</span>
                            </li>
                            <li class="d-flex align-items-center">
                                <i class="ph-bold ph-check-circle text-main-600 tw-mr-3"></i>
                                <span>Feature 3</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="project-info bg-white tw-p-8 tw-rounded-xl tw-mb-8">
                        <h3 class="tw-mb-6">Project Information</h3>
                        <ul class="tw-space-y-4">
                            <li class="d-flex justify-content-between">
                                <strong>Client:</strong>
                                <span>Client Name</span>
                            </li>
                            <li class="d-flex justify-content-between">
                                <strong>Category:</strong>
                                <span>Category Name</span>
                            </li>
                            <li class="d-flex justify-content-between">
                                <strong>Date:</strong>
                                <span>Project Date</span>
                            </li>
                            <li class="d-flex justify-content-between">
                                <strong>Location:</strong>
                                <span>Project Location</span>
                            </li>
                        </ul>
                    </div>

                    <div class="project-contact bg-white tw-p-8 tw-rounded-xl">
                        <h3 class="tw-mb-6">Interested in Similar Projects?</h3>
                        <p class="tw-mb-6">Contact us for more information about our services and how we can help with your project.</p>
                        <a href="/contact" class="btn btn-main hover-style-two button--stroke group active--translate-y-2 fw-semibold">
                            <span class="button__flair"></span>
                            <span class="button__label">Contact Us</span>
                            <span class="text-white tw-text-sm tw-rounded d-flex justify-content-center align-items-center position-relative group-hover-text-main-600 tw-duration-500">
                                <i class="ph-bold ph-caret-right"></i>
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include('../includes/footer') %> 
            <a href="/contact" class="btn btn-primary">Contact Us</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include('../includes/footer') %>
