function loadShipments() {
    fetch('/dashboard/api/shipments?status=in_transit,processing')
        .then(response => response.json())
        .then(data => {
            if (data.success && data.shipments && data.shipments.length > 0) {
                renderActiveShipments(data.shipments);
                addShipmentsToMap(data.shipments);
            } else {
                showEmptyActiveShipments();
            }
        })
        .catch(error => {
            console.error('Error loading shipments:', error);
            showEmptyActiveShipments();
        });
}

function renderActiveShipments(shipments) {
    const container = document.getElementById('activeShipmentsList');
    container.innerHTML = shipments.map(shipment => {
        const statusColor = getShipmentStatusColor(shipment.status);
        const statusText = shipment.status?.replace('_', ' ').toUpperCase() || 'UNKNOWN';
        
        return `
            <div class="shipment-item" onclick="focusShipment('${shipment.trackingId}')" style="display: flex; align-items: center; gap: 16px; padding: 16px; border: 1px solid #e5e7eb; border-radius: 12px; margin-bottom: 12px; cursor: pointer; transition: all 0.2s ease;">
                <div style="width: 12px; height: 12px; background: ${statusColor}; border-radius: 50%;"></div>
                <div style="flex: 1;">
                    <div style="font-weight: 600; color: #032330;">${shipment.trackingId}</div>
                    <div style="font-size: 14px; color: #6b7280;">${shipment.origin?.city || 'N/A'} â ${shipment.destination?.city || 'N/A'}</div>
                    <div style="font-size: 12px; color: #6b7280;">${shipment.carrier || 'N/A'} â¢ ${shipment.weight || 0} kg</div>
                </div>
