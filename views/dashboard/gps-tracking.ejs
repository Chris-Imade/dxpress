    }).addTo(map);
}

function loadStats() {
    fetch('/dashboard/api/shipments')
        .then(response => response.json())
        .then(data => {
            if (data.success && data.shipments) {
                renderGPSStats(data.shipments);
            } else {
                showEmptyGPSStats();
            }
        })
        .catch(error => {
            console.error('Error loading GPS stats:', error);
            showEmptyGPSStats();
        });
}

function renderGPSStats(shipments) {
    const activeShipments = shipments.filter(s => ['in_transit', 'processing'].includes(s.status));
    const inTransit = shipments.filter(s => s.status === 'in_transit');
    const delivered = shipments.filter(s => s.status === 'delivered');
    const pending = shipments.filter(s => ['draft', 'pending'].includes(s.status));

    const statsContainer = document.getElementById('gpsTrackingStats');
    statsContainer.innerHTML = `
        <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, #10b981, #059669);">
                <i class="fas fa-shipping-fast"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">${activeShipments.length}</div>
                <div class="stat-label">Active Shipments</div>
                <div class="stat-change ${activeShipments.length > 0 ? 'positive' : 'neutral'}">Live data</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, #3b82f6, #1d4ed8);">
