<!-- Banner start -->
<section
  class="banner-inner d-flex align-items-center position-relative overflow-hidden z-1"
>
  <div
    class="banner-bg position-absolute top-0 tw-start-0 h-100 w-100 bg-img z-n1"
    data-background-image="/assets/images/thumbs/banner-inner-bg1.png"
  ></div>
  <div class="container position-relative tw-pb-21 tw-pt-400-px">
    <div
      class="banner-inner__content max-w-850-px tw-mx-auto position-absolute top-50 tw-start-50 tw--translate-x-50 tw--translate-y-50 w-100 h-100 d-flex flex-column justify-content-center"
    >
      <h1 class="tw-mb-15 text-white text-center">Shipment Confirmation</h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb justify-content-center">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page">
            Shipment Confirmation
          </li>
        </ol>
      </nav>
    </div>
  </div>
</section>
<!-- Banner end -->

<!-- Confirmation Section start -->
<section class="py-100">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div
          class="confirmation-wrapper bg-white p-4 p-md-5 common-shadow-three tw-rounded-xl"
        >
          <!-- Success Message -->
          <div class="text-center mb-5">
            <div class="confirmation-icon mb-4">
              <i
                class="fas fa-check-circle text-success"
                style="font-size: 80px"
              ></i>
            </div>
            <h3 class="mb-3">Payment Successful!</h3>
            <p class="mb-4">
              Your shipment has been created and payment has been processed
              successfully.
            </p>
          </div>

          <!-- Shipment Details -->
          <div class="shipment-details card mb-4">
            <div class="card-body">
              <h5 class="card-title mb-4">Shipment Details</h5>
              <div class="row">
                <div class="col-md-6">
                  <div class="detail-item mb-3">
                    <strong>Tracking Number:</strong>
                    <span class="text-main-600 fw-bold"
                      ><%= shipment.trackingId %></span
                    >
                  </div>
                  <div class="detail-item mb-3">
                    <strong>Carrier:</strong>
                    <span><%= shipment.carrier %></span>
                  </div>
                  <div class="detail-item mb-3">
                    <strong>Service:</strong>
                    <span><%= shipment.service %></span>
                  </div>
                  <div class="detail-item mb-3">
                    <strong>Estimated Delivery:</strong>
                    <span
                      ><%= new
                      Date(shipment.estimatedDelivery).toLocaleDateString()
                      %></span
                    >
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="detail-item mb-3">
                    <strong>Origin:</strong>
                    <span
                      ><%= shipment.origin.address %>, <%= shipment.origin.city
                      %>, <%= shipment.origin.postalCode %></span
                    >
                  </div>
                  <div class="detail-item mb-3">
                    <strong>Destination:</strong>
                    <span
                      ><%= shipment.destination.address %>, <%=
                      shipment.destination.city %>, <%=
                      shipment.destination.postalCode %></span
                    >
                  </div>
                  <div class="detail-item mb-3">
                    <strong>Package Type:</strong>
                    <span
                      ><%= shipment.packageType.replace('_', ' ').toUpperCase()
                      %></span
                    >
                  </div>
                  <div class="detail-item mb-3">
                    <strong>Weight:</strong>
                    <span><%= shipment.weight %> kg</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Payment Details -->
          <div class="payment-details card mb-4">
            <div class="card-body">
              <h5 class="card-title mb-4">Payment Details</h5>
              <div class="row">
                <div class="col-md-6">
                  <div class="detail-item mb-3">
                    <strong>Payment Status:</strong>
                    <span class="text-success">Paid</span>
                  </div>
                  <div class="detail-item mb-3">
                    <strong>Payment Method:</strong>
                    <span><%= shipment.paymentProvider.toUpperCase() %></span>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="detail-item mb-3">
                    <strong>Amount Paid:</strong>
                    <span>Â£<%= shipment.price.toFixed(2) %></span>
                  </div>
                  <div class="detail-item mb-3">
                    <strong>Payment Date:</strong>
                    <span
                      ><%= new
                      Date(shipment.paymentCompletedAt).toLocaleString()
                      %></span
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="d-grid gap-2">
            <a
              href="/shipment/track/<%= shipment.trackingId %>"
              class="btn btn-outline-primary"
            >
              <i class="fas fa-search me-2"></i> Track Shipment
            </a>
            <a href="/create-shipment" class="btn btn-main hover-style-two">
              <i class="fas fa-plus me-2"></i> Create Another Shipment
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Confirmation Section end -->

<style>
  .confirmation-icon {
    color: #28a745;
  }
  .detail-item {
    padding: 10px;
    background: #f8f9fa;
    border-radius: 8px;
  }
  .detail-item strong {
    color: #495057;
    margin-right: 10px;
  }
  .text-main-600 {
    color: var(--color-main-600);
  }
</style>
