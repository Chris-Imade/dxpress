<!-- Tracking Form Section start -->
<section class="py-140">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="max-w-856-px mx-auto text-center tw-mb-14">
          <span
            class="splitTextStyleTwo cursor-small tw-text-xl fw-bold fst-italic text-decoration-underline text-main-600 tw-mb-305"
            >Real-Time Tracking System</span
          >
          <h2 class="splitTextStyleOne cursor-big tw-mb-8">
            Track Your Shipment Status
          </h2>
          <p class="cursor-small text-neutral-900">
            Access instant updates on your shipment's location and status
            through our advanced tracking system. Enter your tracking number for
            detailed information about your package's journey.
          </p>
        </div>

        <div
          class="bg-white p-4 p-md-5 common-shadow-three tw-rounded-xl"
          data-aos="fade-up"
          data-aos-duration="1000"
          data-aos-delay="300"
        >
          <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
          <div class="alert alert-danger" role="alert"><%= errorMessage %></div>
          <% } %> <% if (typeof successMessage !== 'undefined' &&
          successMessage) { %>
          <div class="alert alert-success" role="alert">
            <%= successMessage %>
          </div>
          <% } %>

          <form action="/track-shipment" method="POST" class="tw-py-12">
            <div class="form-group mb-4">
              <label for="trackingId" class="form-label fw-bold tw-text-lg"
                >Tracking Number</label
              >
              <input
                type="text"
                class="form-control tw-py-3 tw-px-4 border border-neutral-200"
                id="trackingId"
                name="trackingId"
                placeholder="Enter your tracking number (e.g., DX123456ABC)"
                required
              />
            </div>
            <div class="text-center">
              <button
                type="submit"
                class="btn btn-main-two hover-style-two button--stroke d-inline-flex align-items-center justify-content-center tw-gap-2 group active--translate-y-2 rounded-0 tw-px-13 tw-py-505"
              >
                <span class="button__flair"></span>
                <span class="button__label">Track Shipment</span>
                <span
                  class="tw-w-7 tw-h-7 bg-white text-main-600 tw-text-sm tw-rounded d-flex justify-content-center align-items-center position-relative tw-duration-500"
                >
                  <i class="ph-bold ph-magnifying-glass"></i>
                </span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Tracking Form Section end -->

