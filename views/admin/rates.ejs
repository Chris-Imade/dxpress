<!-- Rates Management Page -->
<div class="dashboard-card" style="margin-bottom: 24px;">
    <div class="card-header">
        <div class="card-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
            <i class="fas fa-calculator"></i>
        </div>
        <div>
            <div class="card-title">Shipment Rates Management</div>
            <div class="card-subtitle">Manage DHL API rates and custom pricing</div>
        </div>
        <div style="margin-left: auto;">
            <button onclick="showCreateRateModal()" style="display: inline-flex; align-items: center; padding: 10px 16px; background: #f59e0b; color: white; border: none; border-radius: 6px; font-size: 14px; font-weight: 500; cursor: pointer;">
                <i class="fas fa-plus" style="margin-right: 8px;"></i>
                Add Custom Rate
            </button>
        </div>
    </div>
</div>

<!-- DHL Rate Update Section -->
<div class="dashboard-card" style="margin-bottom: 24px;">
    <div style="padding: 24px;">
        <h3 style="font-size: 18px; font-weight: 600; color: #374151; margin-bottom: 16px; padding-bottom: 8px; border-bottom: 2px solid #e5e7eb;">
            <i class="fas fa-truck" style="margin-right: 8px; color: #dc2626;"></i>
            DHL API Rate Management
        </h3>
        <form action="/admin/rates/dhl/update" method="POST" style="display: flex; align-items: end; gap: 16px;">
            <div style="flex: 1;">
                <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 14px;">
                    Admin Markup Percentage
                </label>
                <input type="number" name="markupPercentage" step="0.01" min="0" max="100" placeholder="0.00" required
                       style="width: 100%; padding: 12px 16px; border: 2px solid #e5e7eb; border-radius: 8px; font-size: 14px;">
            </div>
            <button type="submit" style="padding: 12px 24px; background: #dc2626; color: white; border: none; border-radius: 8px; font-weight: 600; cursor: pointer;">
                <i class="fas fa-sync-alt" style="margin-right: 8px;"></i>
                Update DHL Rates
            </button>
        </form>
        <p style="margin-top: 12px; font-size: 14px; color: #6b7280;">
            This will fetch current DHL rates and apply your markup percentage. All shipments will use these updated rates.
        </p>
    </div>
</div>

<!-- Current Rates Table -->
<div class="dashboard-card">
    <div style="padding: 24px;">
        <h3 style="font-size: 18px; font-weight: 600; color: #374151; margin-bottom: 16px; padding-bottom: 8px; border-bottom: 2px solid #e5e7eb;">
            <i class="fas fa-list" style="margin-right: 8px; color: #6b7280;"></i>
            Current Active Rates
        </h3>
        
        <% if (rates && rates.length > 0) { %>
            <div style="overflow-x: auto;">
                <table style="width: 100%; border-collapse: collapse;">
                    <thead>
                        <tr style="background: #f8fafc; border-bottom: 2px solid #e5e7eb;">
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #374151;">Carrier</th>
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #374151;">Service</th>
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #374151;">Base Rate</th>
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #374151;">Markup</th>
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #374151;">Final Rate</th>
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #374151;">Weight Range</th>
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #374151;">Zone</th>
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #374151;">Last Updated</th>
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #374151;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% rates.forEach(rate => { %>
                            <tr style="border-bottom: 1px solid #e5e7eb;">
                                <td style="padding: 12px;">
                                    <% const bgColor = rate.carrier === 'dhl' ? '#dc2626' : '#6b7280'; %>
                                    <span style="display: inline-block; padding: 4px 8px; background: <%= bgColor %>; color: white; border-radius: 4px; font-size: 12px; font-weight: 600; text-transform: uppercase;">
                                        <%= rate.carrier %>
                                    </span>
                                </td>
                                <td style="padding: 12px; font-weight: 500;"><%= rate.service %></td>
                                <td style="padding: 12px;">£<%= rate.baseRate.toFixed(2) %></td>
                                <td style="padding: 12px;">£<%= rate.markup.toFixed(2) %></td>
                                <td style="padding: 12px; font-weight: 600; color: #059669;">£<%= rate.finalRate.toFixed(2) %></td>
                                <td style="padding: 12px; font-size: 14px; color: #6b7280;">
                                    <%= rate.weightRange.min %>kg - <%= rate.weightRange.max === 999999 ? '∞' : rate.weightRange.max + 'kg' %>
                                </td>
                                <td style="padding: 12px;">
                                    <span style="padding: 2px 6px; background: #e0f2fe; color: #0277bd; border-radius: 4px; font-size: 12px;">
                                        <%= rate.zone %>
                                    </span>
                                </td>
                                <td style="padding: 12px; font-size: 14px; color: #6b7280;">
                                    <%= new Date(rate.lastUpdated).toLocaleDateString() %>
                                </td>
                                <td style="padding: 12px;">
                                    <div style="display: flex; gap: 8px;">
                                        <button onclick="editRate('<%= rate._id %>')" style="padding: 6px 12px; background: #3b82f6; color: white; border: none; border-radius: 4px; font-size: 12px; cursor: pointer;">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <% if (rate.carrier !== 'dhl') { %>
                                            <button onclick="deleteRate('<%= rate._id %>')" style="padding: 6px 12px; background: #ef4444; color: white; border: none; border-radius: 4px; font-size: 12px; cursor: pointer;">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div style="text-align: center; padding: 40px; color: #6b7280;">
                <i class="fas fa-calculator" style="font-size: 48px; margin-bottom: 16px; opacity: 0.5;"></i>
                <p style="font-size: 18px; margin-bottom: 8px;">No rates configured</p>
                <p style="font-size: 14px;">Update DHL rates or add custom rates to get started.</p>
            </div>
        <% } %>
    </div>
</div>

<!-- Create Rate Modal -->
<div id="createRateModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000;">
    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); background: white; border-radius: 12px; padding: 24px; width: 90%; max-width: 600px; max-height: 90vh; overflow-y: auto;">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px; padding-bottom: 16px; border-bottom: 2px solid #e5e7eb;">
            <h3 style="font-size: 20px; font-weight: 600; color: #374151; margin: 0;">Create Custom Rate</h3>
            <button onclick="hideCreateRateModal()" style="background: none; border: none; font-size: 24px; color: #6b7280; cursor: pointer;">&times;</button>
        </div>
        
        <form action="/admin/rates/create" method="POST">
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 16px; margin-bottom: 16px;">
                <div>
                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 14px;">Carrier</label>
                    <select name="carrier" required style="width: 100%; padding: 12px 16px; border: 2px solid #e5e7eb; border-radius: 8px; font-size: 14px; background: white;">
                        <option value="">Select Carrier</option>
                        <option value="fedex">FedEx</option>
                        <option value="ups">UPS</option>
                        <option value="custom">Custom</option>
                    </select>
                </div>
                <div>
                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 14px;">Service Name</label>
                    <input type="text" name="service" required placeholder="e.g., Express Overnight" style="width: 100%; padding: 12px 16px; border: 2px solid #e5e7eb; border-radius: 8px; font-size: 14px;">
                </div>
            </div>
            
            <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 16px; margin-bottom: 16px;">
                <div>
                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 14px;">Base Rate (£)</label>
                    <input type="number" name="baseRate" step="0.01" min="0" required placeholder="0.00" style="width: 100%; padding: 12px 16px; border: 2px solid #e5e7eb; border-radius: 8px; font-size: 14px;">
                </div>
                <div>
                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 14px;">Markup (£)</label>
                    <input type="number" name="markup" step="0.01" min="0" placeholder="0.00" style="width: 100%; padding: 12px 16px; border: 2px solid #e5e7eb; border-radius: 8px; font-size: 14px;">
                </div>
                <div>
                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 14px;">Currency</label>
                    <select name="currency" style="width: 100%; padding: 12px 16px; border: 2px solid #e5e7eb; border-radius: 8px; font-size: 14px; background: white;">
                        <option value="GBP">GBP (£)</option>
                        <option value="USD">USD ($)</option>
                        <option value="EUR">EUR (€)</option>
                    </select>
                </div>
            </div>
            
            <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 16px; margin-bottom: 24px;">
                <div>
                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 14px;">Min Weight (kg)</label>
                    <input type="number" name="weightMin" step="0.01" min="0" placeholder="0" style="width: 100%; padding: 12px 16px; border: 2px solid #e5e7eb; border-radius: 8px; font-size: 14px;">
                </div>
                <div>
                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 14px;">Max Weight (kg)</label>
                    <input type="number" name="weightMax" step="0.01" min="0" placeholder="999999" style="width: 100%; padding: 12px 16px; border: 2px solid #e5e7eb; border-radius: 8px; font-size: 14px;">
                </div>
                <div>
                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 14px;">Zone</label>
                    <select name="zone" style="width: 100%; padding: 12px 16px; border: 2px solid #e5e7eb; border-radius: 8px; font-size: 14px; background: white;">
                        <option value="domestic">Domestic</option>
                        <option value="international">International</option>
                        <option value="express">Express</option>
                    </select>
                </div>
            </div>
            
            <div style="display: flex; justify-content: end; gap: 12px;">
                <button type="button" onclick="hideCreateRateModal()" style="padding: 12px 24px; background: #f3f4f6; border: 2px solid #e5e7eb; border-radius: 8px; color: #374151; font-weight: 600; cursor: pointer;">
                    Cancel
                </button>
                <button type="submit" style="padding: 12px 24px; background: #f59e0b; color: white; border: none; border-radius: 8px; font-weight: 600; cursor: pointer;">
                    <i class="fas fa-save" style="margin-right: 8px;"></i>
                    Create Rate
                </button>
            </div>
        </form>
    </div>
</div>

<script>
function showCreateRateModal() {
    document.getElementById('createRateModal').style.display = 'block';
}

function hideCreateRateModal() {
    document.getElementById('createRateModal').style.display = 'none';
}

function editRate(rateId) {
    // Implement edit functionality
    window.location.href = `/admin/rates/edit/${rateId}`;
}

function deleteRate(rateId) {
    if (confirm('Are you sure you want to delete this rate?')) {
        fetch(`/admin/rates/delete/${rateId}`, {
            method: 'DELETE',
        }).then(() => {
            window.location.reload();
        });
    }
}

// Close modal when clicking outside
document.getElementById('createRateModal').addEventListener('click', function(e) {
    if (e.target === this) {
        hideCreateRateModal();
    }
});
</script>
