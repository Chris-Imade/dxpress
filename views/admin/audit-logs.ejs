<!-- Audit Logs Page -->
<div class="dashboard-card" style="margin-bottom: 24px;">
    <div class="card-header">
        <div class="card-icon" style="background: linear-gradient(135deg, #059669, #047857);">
            <i class="fas fa-clipboard-list"></i>
        </div>
        <div>
            <div class="card-title">Audit Logs</div>
            <div class="card-subtitle">Track all admin actions and system changes</div>
        </div>
        <div style="margin-left: auto;">
            <button onclick="exportLogs()" style="display: inline-flex; align-items: center; padding: 10px 16px; background: #059669; color: white; border: none; border-radius: 6px; font-size: 14px; font-weight: 500; cursor: pointer;">
                <i class="fas fa-download" style="margin-right: 8px;"></i>
                Export Logs
            </button>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="dashboard-card" style="margin-bottom: 24px;">
    <div style="padding: 20px;">
        <form method="GET" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 16px; align-items: end;">
            <div>
                <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 14px;">Action Type</label>
                <select name="action" style="width: 100%; padding: 10px 12px; border: 2px solid #e5e7eb; border-radius: 6px; font-size: 14px; background: white;">
                    <option value="">All Actions</option>
                    <option value="CREATE_SHIPMENT" <%= filters.action === 'CREATE_SHIPMENT' ? 'selected' : '' %>>Create Shipment</option>
                    <option value="UPDATE_SHIPMENT" <%= filters.action === 'UPDATE_SHIPMENT' ? 'selected' : '' %>>Update Shipment</option>
                    <option value="DELETE_SHIPMENT" <%= filters.action === 'DELETE_SHIPMENT' ? 'selected' : '' %>>Delete Shipment</option>
                    <option value="UPDATE_RATES" <%= filters.action === 'UPDATE_RATES' ? 'selected' : '' %>>Update Rates</option>
                    <option value="CREATE_USER" <%= filters.action === 'CREATE_USER' ? 'selected' : '' %>>Create User</option>
                    <option value="UPDATE_USER" <%= filters.action === 'UPDATE_USER' ? 'selected' : '' %>>Update User</option>
                    <option value="DELETE_USER" <%= filters.action === 'DELETE_USER' ? 'selected' : '' %>>Delete User</option>
                    <option value="SUSPEND_USER" <%= filters.action === 'SUSPEND_USER' ? 'selected' : '' %>>Suspend User</option>
                    <option value="LOGIN" <%= filters.action === 'LOGIN' ? 'selected' : '' %>>Login</option>
                </select>
            </div>
            <div>
                <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 14px;">Resource</label>
                <select name="resource" style="width: 100%; padding: 10px 12px; border: 2px solid #e5e7eb; border-radius: 6px; font-size: 14px; background: white;">
                    <option value="">All Resources</option>
                    <option value="shipment" <%= filters.resource === 'shipment' ? 'selected' : '' %>>Shipments</option>
                    <option value="user" <%= filters.resource === 'user' ? 'selected' : '' %>>Users</option>
                    <option value="rates" <%= filters.resource === 'rates' ? 'selected' : '' %>>Rates</option>
                    <option value="payment" <%= filters.resource === 'payment' ? 'selected' : '' %>>Payments</option>
                </select>
            </div>
            <div>
                <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 14px;">Date From</label>
                <input type="date" name="dateFrom" value="<%= filters.dateFrom || '' %>" style="width: 100%; padding: 10px 12px; border: 2px solid #e5e7eb; border-radius: 6px; font-size: 14px;">
            </div>
            <div>
                <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #374151; font-size: 14px;">Date To</label>
                <input type="date" name="dateTo" value="<%= filters.dateTo || '' %>" style="width: 100%; padding: 10px 12px; border: 2px solid #e5e7eb; border-radius: 6px; font-size: 14px;">
            </div>
            <button type="submit" style="padding: 10px 20px; background: #059669; color: white; border: none; border-radius: 6px; font-weight: 600; cursor: pointer;">
                <i class="fas fa-filter" style="margin-right: 8px;"></i>
                Filter
            </button>
        </form>
    </div>
</div>

<!-- Audit Logs Table -->
<div class="dashboard-card">
    <div style="padding: 24px;">
        <h3 style="font-size: 18px; font-weight: 600; color: #374151; margin-bottom: 16px; padding-bottom: 8px; border-bottom: 2px solid #e5e7eb;">
            <i class="fas fa-history" style="margin-right: 8px; color: #6b7280;"></i>
            Recent Activity
        </h3>
        
        <% if (logs && logs.length > 0) { %>
            <div style="overflow-x: auto;">
                <table style="width: 100%; border-collapse: collapse;">
                    <thead>
                        <tr style="background: #f8fafc; border-bottom: 2px solid #e5e7eb;">
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #374151;">Timestamp</th>
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #374151;">User</th>
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #374151;">Action</th>
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #374151;">Resource</th>
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #374151;">Details</th>
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #374151;">Status</th>
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #374151;">IP Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% logs.forEach(log => { %>
                            <tr style="border-bottom: 1px solid #e5e7eb;">
                                <td style="padding: 12px; font-size: 14px; color: #374151;">
                                    <%= new Date(log.timestamp).toLocaleString() %>
                                </td>
                                <td style="padding: 12px;">
                                    <div style="display: flex; align-items: center; gap: 8px;">
                                        <div style="width: 32px; height: 32px; border-radius: 50%; background: linear-gradient(135deg, #059669, #047857); display: flex; align-items: center; justify-content: center; color: white; font-weight: 600; font-size: 12px;">
                                            <%= log.userId && log.userId.name ? log.userId.name.charAt(0).toUpperCase() : 'U' %>
                                        </div>
                                        <div>
                                            <div style="font-weight: 500; color: #374151; font-size: 14px;">
                                                <%= log.userId ? log.userId.name || 'Unknown' : 'System' %>
                                            </div>
                                            <div style="font-size: 12px; color: #6b7280;">
                                                <%= log.userId ? log.userId.email : 'system@dxpress.com' %>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td style="padding: 12px;">
                                    <% 
                                    let actionColor = '#6b7280';
                                    if (log.action.includes('CREATE')) actionColor = '#059669';
                                    else if (log.action.includes('UPDATE')) actionColor = '#f59e0b';
                                    else if (log.action.includes('DELETE')) actionColor = '#ef4444';
                                    else if (log.action.includes('LOGIN')) actionColor = '#3b82f6';
                                    %>
                                    <span style="display: inline-block; padding: 4px 8px; background: <%= actionColor %>; color: white; border-radius: 4px; font-size: 12px; font-weight: 600;">
                                        <%= log.action.replace(/_/g, ' ') %>
                                    </span>
                                </td>
                                <td style="padding: 12px;">
                                    <span style="padding: 2px 6px; background: #e0f2fe; color: #0277bd; border-radius: 4px; font-size: 12px; text-transform: capitalize;">
                                        <%= log.resource %>
                                    </span>
                                </td>
                                <td style="padding: 12px; max-width: 200px;">
                                    <% if (log.details && typeof log.details === 'object') { %>
                                        <div style="font-size: 12px; color: #6b7280;">
                                            <% Object.keys(log.details).slice(0, 2).forEach(key => { %>
                                                <div><strong><%= key %>:</strong> <%= JSON.stringify(log.details[key]).slice(0, 30) %>...</div>
                                            <% }); %>
                                        </div>
                                    <% } else { %>
                                        <span style="font-size: 12px; color: #6b7280;">No details</span>
                                    <% } %>
                                </td>
                                <td style="padding: 12px;">
                                    <% const statusColor = log.success ? '#10b981' : '#ef4444'; %>
                                    <span style="display: inline-block; padding: 4px 8px; background: <%= statusColor %>; color: white; border-radius: 4px; font-size: 12px; font-weight: 600;">
                                        <%= log.success ? 'Success' : 'Failed' %>
                                    </span>
                                </td>
                                <td style="padding: 12px; font-size: 12px; color: #6b7280;">
                                    <%= log.ipAddress || 'Unknown' %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination -->
            <% if (pagination && pagination.totalPages > 1) { %>
                <div style="display: flex; justify-content: center; align-items: center; gap: 8px; margin-top: 24px; padding-top: 16px; border-top: 2px solid #e5e7eb;">
                    <% if (pagination.page > 1) { %>
                        <a href="?page=<%= pagination.page - 1 %>&action=<%= filters.action || '' %>&resource=<%= filters.resource || '' %>&dateFrom=<%= filters.dateFrom || '' %>&dateTo=<%= filters.dateTo || '' %>" 
                           style="padding: 8px 12px; background: #f3f4f6; border: 2px solid #e5e7eb; border-radius: 6px; color: #374151; text-decoration: none; font-weight: 500;">
                            Previous
                        </a>
                    <% } %>
                    
                    <span style="padding: 8px 16px; color: #6b7280; font-weight: 500;">
                        Page <%= pagination.page %> of <%= pagination.totalPages %>
                    </span>
                    
                    <% if (pagination.page < pagination.totalPages) { %>
                        <a href="?page=<%= pagination.page + 1 %>&action=<%= filters.action || '' %>&resource=<%= filters.resource || '' %>&dateFrom=<%= filters.dateFrom || '' %>&dateTo=<%= filters.dateTo || '' %>" 
                           style="padding: 8px 12px; background: #f3f4f6; border: 2px solid #e5e7eb; border-radius: 6px; color: #374151; text-decoration: none; font-weight: 500;">
                            Next
                        </a>
                    <% } %>
                </div>
            <% } %>
        <% } else { %>
            <div style="text-align: center; padding: 40px; color: #6b7280;">
                <i class="fas fa-clipboard-list" style="font-size: 48px; margin-bottom: 16px; opacity: 0.5;"></i>
                <p style="font-size: 18px; margin-bottom: 8px;">No audit logs found</p>
                <p style="font-size: 14px;">System activity will appear here once actions are performed.</p>
            </div>
        <% } %>
    </div>
</div>

<script>
function exportLogs() {
    const params = new URLSearchParams(window.location.search);
    params.set('export', 'csv');
    window.location.href = '/admin/audit-logs?' + params.toString();
}
</script>
