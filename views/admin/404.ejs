<!-- 404 Error Page -->
<div style="display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 60vh; text-align: center; padding: 40px;">
    <div style="font-size: 120px; color: #f59e0b; margin-bottom: 24px;">
        <i class="fas fa-exclamation-triangle"></i>
    </div>
    
    <h1 style="font-size: 48px; font-weight: 700; color: #374151; margin-bottom: 16px;">404</h1>
    <h2 style="font-size: 24px; font-weight: 600; color: #6b7280; margin-bottom: 16px;">Page Not Found</h2>
    
    <p style="font-size: 16px; color: #6b7280; max-width: 500px; margin-bottom: 32px; line-height: 1.6;">
        The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.
    </p>

    <div style="display: flex; gap: 16px; flex-wrap: wrap; justify-content: center;">
        <a href="/admin" class="btn btn-primary">
            <i class="fas fa-home"></i>
            Go to Dashboard
        </a>
        <button onclick="window.history.back()" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i>
            Go Back
        </button>
    </div>
</div>
