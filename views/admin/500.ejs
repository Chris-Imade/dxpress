<!-- 500 Error Page -->
<div style="display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 60vh; text-align: center; padding: 40px;">
    <div style="font-size: 120px; color: #ef4444; margin-bottom: 24px;">
        <i class="fas fa-exclamation-triangle"></i>
    </div>
    
    <h1 style="font-size: 48px; font-weight: 700; color: #374151; margin-bottom: 16px;">500</h1>
    <h2 style="font-size: 24px; font-weight: 600; color: #6b7280; margin-bottom: 16px;">Server Error</h2>
    
    <p style="font-size: 16px; color: #6b7280; max-width: 500px; margin-bottom: 32px; line-height: 1.6;">
        Oops! Something went wrong on our end. Please try again later.
    </p>

    <% if (error) { %>
    <div style="background: #fef2f2; border: 2px solid #fecaca; border-radius: 8px; padding: 24px; margin-bottom: 32px; max-width: 800px; text-align: left;">
        <h5 style="font-weight: 600; color: #dc2626; margin-bottom: 16px;">Error Details:</h5>
        <p style="margin-bottom: 8px; color: #374151;"><strong>Message:</strong> <%= error.message %></p>
        <% if (error.stack) { %>
        <div style="margin-top: 16px;">
            <p style="margin-bottom: 8px; color: #374151;"><strong>Stack Trace:</strong></p>
            <pre style="background: #f3f4f6; padding: 16px; border-radius: 6px; font-size: 12px; max-height: 200px; overflow-y: auto; color: #374151;"><%= error.stack %></pre>
        </div>
        <% } %>
    </div>
    <% } %>

    <div style="display: flex; gap: 16px; flex-wrap: wrap; justify-content: center;">
        <a href="/admin" class="btn btn-primary">
            <i class="fas fa-home"></i>
            Go to Dashboard
        </a>
        <button onclick="window.location.reload()" class="btn btn-secondary">
            <i class="fas fa-sync-alt"></i>
            Try Again
        </button>
    </div>
</div>
