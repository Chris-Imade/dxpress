<script>
  document.addEventListener("DOMContentLoaded", function () {
    const newsletterForm = document.getElementById("newsletterForm");
    const newsletterMessage = document.getElementById("newsletter-message");
    const newsletterMessageText = document.getElementById(
      "newsletter-message-text"
    );

    if (newsletterForm) {
      newsletterForm.addEventListener("submit", function (event) {
        event.preventDefault();

        const email = document.getElementById("newsletter-email").value;

        // Send AJAX request
        fetch("/newsletter/subscribe", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ email }),
        })
          .then((response) => response.json())
          .then((data) => {
            // Display message
            newsletterMessage.style.display = "block";

            if (data.success) {
              newsletterMessageText.textContent = data.message;
              newsletterMessageText.className = "text-main-600 text-center";
              // Clear form
              newsletterForm.reset();
            } else {
              newsletterMessageText.textContent = data.message;
              newsletterMessageText.className = "text-danger text-center";
            }

            // Hide message after 5 seconds
            setTimeout(() => {
              newsletterMessage.style.display = "none";
            }, 5000);
          })
          .catch((error) => {
            console.error("Newsletter subscription error:", error);
            newsletterMessage.style.display = "block";
            newsletterMessageText.textContent =
              "An error occurred. Please try again later.";
            newsletterMessageText.className = "text-danger text-center";

            // Hide message after 5 seconds
            setTimeout(() => {
              newsletterMessage.style.display = "none";
            }, 5000);
          });
      });
    }
  });
</script>
