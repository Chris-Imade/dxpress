<!-- Error start -->
<section class="py-140 d-flex align-items-center justify-content-center">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 text-center">
        <div data-aos="fade-up" data-aos-duration="1000" data-aos-delay="100">
          <img
            src="/assets/images/thumbs/500.png"
            alt="500 Error"
            class="img-fluid mb-5"
            style="max-height: 300px"
          />
        </div>
        <h1
          class="tw-mb-6"
          data-aos="fade-up"
          data-aos-duration="1000"
          data-aos-delay="200"
        >
          Server Error
        </h1>
        <p
          class="text-neutral-900 mb-5"
          data-aos="fade-up"
          data-aos-duration="1000"
          data-aos-delay="300"
        >
          Something went wrong on our server. We're working to fix the issue.
          Please try again later.
        </p>
        <% if (error) { %>
        <div class="alert alert-danger mb-4" role="alert"><%= error %></div>
        <% } %>
        <div data-aos="fade-up" data-aos-duration="1000" data-aos-delay="400">
          <a
            href="/"
            class="btn btn-main-two hover-style-two button--stroke d-inline-flex align-items-center justify-content-center tw-gap-2 group active--translate-y-2 rounded-0 tw-px-13 tw-py-505"
          >
            <span class="button__flair"></span>
            <span class="button__label">Back to Home</span>
            <span
              class="tw-w-7 tw-h-7 bg-white text-main-600 tw-text-sm tw-rounded d-flex justify-content-center align-items-center position-relative tw-duration-500"
            >
              <i class="ph-bold ph-house"></i>
            </span>
          </a>
          <a
            href="/contact"
            class="btn btn-outline-primary tw-px-13 tw-py-505 ms-3"
          >
            Contact Support
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Error end -->
